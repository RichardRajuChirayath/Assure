{
    "$schema": "https://railway.app/benchmark.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "prisma generate && next build"
    },
    "deploy": {
        "startCommand": "next start -p ${PORT:-3000} -H 0.0.0.0",
        "healthcheckPath": "/api/health",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE"
    }
}