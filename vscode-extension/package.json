{
    "name": "assure-vscode",
    "displayName": "Assure: Pre-Execution Safety",
    "description": "Real-time safety intelligence for risky DevOps changes.",
    "version": "0.0.1",
    "publisher": "assure-tech",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:assure.preflight"
    ],
    "main": "./out/extension.js",
    "dependencies": {
        "axios": "^1.4.0"
    },
    "contributes": {
        "commands": [
            {
                "command": "assure.preflight",
                "title": "Assure: Preflight Safety Check",
                "category": "Assure"
            }
        ],
        "configuration": {
            "title": "Assure",
            "properties": {
                "assure.apiUrl": {
                    "type": "string",
                    "default": "https://assure-production.up.railway.app/api",
                    "description": "The base URL for the Assure Backend API."
                },
                "assure.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Your Assure API Key for authentication."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "16.x",
        "typescript": "^5.1.3",
        "eslint": "^8.41.0",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/parser": "^5.59.5"
    }
}