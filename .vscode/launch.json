{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Assure VS Code Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}/vscode-extension"
            ],
            "outFiles": [
                "${workspaceRoot}/vscode-extension/out/**/*.js"
            ],
            "preLaunchTask": "npm: compile (vscode-extension)"
        }
    ]
}